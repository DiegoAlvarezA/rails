<% name ||= "Crear" %>
<h1><%= name %> cliente</h1>
<%= form_for @customer do |f| %>
<% @customer.errors.full_messages.each do |message| %>
<div class="be-red white top-space">
  * <%= message %>
</div>
<%end%>
<div class="field">
  <%= f.text_field :names, placeholder: "Nombres", class:"form-control" %>
</div>
<div class="field">
  <%= f.text_field :surnames, placeholder: "Apellidos", class:"form-control"%>
</div>
<div class="field">
  <%= f.email_field :email, placeholder: "Email", class:"form-control"%>
</div>
<div class="field">
  <%= f.submit "Guardar", class:"btn be-red white"  %>
</div>
<%end%>
